{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-unused-vars": [
            "off"
        ],
        "eqeqeq": [
            "error"
        ],
        "no-inner-declarations": [
            "warn"
        ],
        "no-multiple-empty-lines": [
            "error", {"max": 2}
        ],
        "spaced-comment": [
            "warn", "always", { "exceptions": ["-", "+"] }
        ],
        "no-var": [ 
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "camelcase": [
            "error", { "properties": "always" }
        ],
        "keyword-spacing": [
            "error",
            {"before": true}
        ],
        "no-undef": [
            "off"
        ],
        "semi": [
            "error",
            "always"
        ],
        "yoda": [
            "error",
            "never"
        ],
        "strict": [
            "error",
            "global"
        ]
    }
}
